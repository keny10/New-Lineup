//header block
{
    "Name": "headerBlock",
    "BlockType": "dock",
    "Orientation": "Horizontal",
    "Padding": "22, 10, 22, 0",
    "Width":"*",
    "Items": [
        //headerLeft
        {
            "Name": "headerLeftPart",
            "BlockType": "stack",
            "Orientation": "Vertical",
            "Spacing": 12,
            "HorizontalAlignment": "Left",
            "Items": [
                //league name
                {
                    "BlockType" : "stack",
                    "VerticalAlignment" : "Center",
                    "Items" :
                    [
                        {                            
                            "BlockType": "text",
                            "Source": "{Season.LeagueInfo.LeagueName}",                            
                            "FontName": "{FontNameWide}",
                            "FontSize": 20
                        },
                        {                            
                            "BlockType": "text",
                            "Source": " Â· {Season.Name}",
                            "VerticalAlignment" : "Center",
                            "FontName": "{FontNameWide}",
                            "FontSize": 16,
                            "Foreground" : "{ForegroundDarker}"
                        }
                    ]
                },       

                //main header
                {
                    "Name": "headerMainContent",
                    "BlockType": "stack",
                    "Spacing": 8,
                    "Items": [
                        // {                           
                        //     "BlockType": "image",
                        //     "Height": 36,
                        //     "Source": ""
                        // },

                        {
                            "BlockType": "text",                            
                            "VerticalAlignment": "Center",                            
                            "Source": "[Line-ups]",
                            "FontName": "{FontNameWide}",
                            "FontSize": 28
                        }
                    ]
                }
            ]
        },

        //headerRight
        {
            "Name": "headerRightPart",
            "BlockType": "stack",
            "Orientation": "Vertical",
            "MarginLeft" : 48,
            "HorizontalAlignment": "Right",
            "Items": [
                {
                    "BlockType": "stack",
                    "Items": [
                        {
                            "Name": "leagueLogo",
                            "BlockType": "image",
                            "Height": 82,
                            "MarginLeft": 36,
                            "Source": "{Season.LeagueInfo.LeagueLogo}"
                        }
                    ]
                }
            ]
        }
    ]
}